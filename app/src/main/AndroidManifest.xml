<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:banner="@mipmap/logo_app_piccola"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app_piccola"
        android:label="@string/app_name"
        android:logo="@mipmap/logo_app_piccola"
        android:roundIcon="@mipmap/logo_app_piccola"
        android:supportsRtl="true"
        android:name=".MyApplication"
        android:enableOnBackInvokedCallback="true"
        android:theme="@style/Theme.ProgettoDispositiviMobili"
        tools:targetApi="34"
        android:requestLegacyExternalStorage="true">


        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ProgettoDispositiviMobili">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ProgettoDispositiviMobili">
        </activity>

        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.ProgettoDispositiviMobili" >
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.ProgettoDispositiviMobili">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ProgettoDispositiviMobili">
        </activity>

        <activity
            android:name=".MainAdminActivity"
            android:exported="false"
            android:theme="@style/Theme.ProgettoDispositiviMobili">
        </activity>

        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.ProgettoDispositiviMobili">
        </activity>

    </application>

</manifest>